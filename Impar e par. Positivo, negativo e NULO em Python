n = int(input("Digite um número: "))
calculo = n % 2 == 0
if calculo:  
  print(n, "é um número par")
else:
  print(n, "é um número ímpar")

-----------------------------------

n = int (input("Digite um valor inteiro: "))
if n > 0:
   print(' POSITIVO')
else:
  if n < 0:
    print('NEGATIVO')
  else:
    print('NULO')
    
